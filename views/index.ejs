<html>
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
        <script type ="text/javascript">
            $(document).ready(function(){
                var socket = io();

                $('#button1').click(function(){
                    console.log('BUTTON CLICKED')
                    socket.emit('button_clicked');
                });
                socket.on('new_count', function(count){
                    console.log('received new count');
                    console.log(count);
                    $("#count").html(count)
                });
                $('#button2').click(function(){
                    console.log('clear button clicked');
                    socket.emit('reset')

                })
             

            });
        
        </script>
        <title>Epic Button Game</title>
        <link rel="stylesheet" type="text/css" href="index.css">
    </head>
    <body>
        <div class="wrapper">
            <h1>This Button has been pushed <span id="count">0</span> time(s)</h1>
            <p>Push the button to update the count!</p>
            <button id='button1'>Push the Epic Button</button>
            <br>
            <br>
            <br>
            <button id='button2'>Reset Count</button>

        </div>
        

    </body>
</html>